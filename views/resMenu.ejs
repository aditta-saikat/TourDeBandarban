<body>
    <section>
        <!--Nav bar-->
      <div>
        <nav class="navbar navbar-expand-lg navbar-dark bg-dark">
          <div class="container-fluid">
            
            <a class="navbar-brand" href="TourDeBandarban">TourDeBandarban</a>
            <button
              class="navbar-toggler"
              type="button"
              data-bs-toggle="collapse"
              data-bs-target="#navbarNavAltMarkup"
              aria-controls="navbarNavAltMarkup"
              aria-expanded="false"
              aria-label="Toggle navigation"
            >
              <span class="navbar-toggler-icon"></span>
            </button>
            <div class="collapse navbar-collapse" id="navbarNavAltMarkup">
              <div class="navbar-nav">
                
            </div>

            
          </div>
          </div>
        </nav>
      </div>  
    </section>

    <section id="Menu">

      <div class="about">
      
          <div class="container">

            <h1 class="heading">Menu</h1>
         
            <div class="box-container">
              <% if (data && data.length > 0) { %>
                <% data.forEach(item => { %>
                  <div class="box">
                    <% if (item.image && item.image.contentType && item.image.image) { %>
                      <div class="image">
                        <img src="data:<%= item.image.contentType %>;base64,<%= item.image.image.toString('base64') %>" alt="">
                      </div>
                    <% } else { %>
                      <div class="image">
                        
                        <img src="placeholder-image.jpg" alt="">
                      </div>
                    <% } %>
                    <div class="content">
                      <h3><%= item.name %></h3>
                      <p>
                         Price: <%= item.price %> <br>    
                      </p>
                      <div class="icons">
                       <!--<span><i class="fas fa-calendar"></i> 21st May, 2022 </span>
                        <span><i class="fas fa-user"></i> by admin</span> -->
                      </div>
                    </div>
                  </div>
                <% })%>
              <% } else { %>
                <div class="no-data">
                  <p>No data available.</p>
              </div>
              <% } %>
            </div>
            
             
         
           <!--<div id="load-more"> load more </div> -->
           
         
         </div>
         
  
      </div>
    </section>


   
    <footer id="footer">

      <i class="social-icon fa-brands fa-facebook-f"></i>
      <i class="social-icon fa-brands fa-twitter"></i>
      <i class="social-icon fa-brands fa-instagram"></i>
      <i class="social-icon fa-solid fa-envelope"></i>
  
      <p>Â© Copyright TourDeBandarban</p>
      <p>All rights preserved</p>
  
    </footer>


